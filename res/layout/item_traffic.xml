<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:paddingLeft="@dimen/margins">
        <TextView
	        android:id="@+id/tv_item_traffic_data" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="2013-06-21"
	        android:textSize="@dimen/content"
	        android:textColor="@color/common"/>
        <ImageView 
            android:id="@+id/iv_traffic_help"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:padding="@dimen/margins"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/help"/>
        <ImageView 
            android:id="@+id/iv_traffic_share"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:paddingLeft="@dimen/margins"
            android:paddingTop="@dimen/margins"
            android:paddingBottom="@dimen/margins"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_traffic_help"
            android:src="@drawable/share_black"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margins">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">            
	        <TextView
	            android:id="@+id/tv_item_traffic_adress" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="广深高速"
	            android:layout_marginRight="5dp"
	            android:textSize="@dimen/content"
	            android:textColor="@color/common"/>
	        <TextView 
	            android:id="@+id/tv_status"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_inactive"
	            android:text="(已处理)"/>
        </LinearLayout>   
	    <TextView
	        android:id="@+id/tv_item_traffic_content" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="违章地点：广深高速"
	        android:layout_marginBottom="@dimen/margins"
	        android:textSize="@dimen/content"
            android:textColor="@color/common"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView
		        android:id="@+id/tv_item_traffic_fraction" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
		        android:text="扣分: 3分"
		        android:textSize="@dimen/content"
		        android:textColor="@color/common_blue"/>
	        <View 
	            android:layout_width="1dp"
	            android:layout_height="14dp"
	            android:background="@color/common_blue"/>
		    <TextView
		        android:id="@+id/tv_item_traffic_money" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
		        android:text="罚款: 150元"
		        android:textSize="@dimen/content"
		        android:textColor="@color/common_blue"/>
		    <View 
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/common_blue"/>
		    <TextView
		        android:id="@+id/tv_item_traffic_total"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="人次: 50次"
                android:textSize="@dimen/content"
                android:textColor="@color/common_blue"/>
	    </LinearLayout>
    </LinearLayout>    
</LinearLayout>